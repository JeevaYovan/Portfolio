{
  "include": ["client/src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.ts"],

  "compilerOptions": {
    "noEmit": true,
    "incremental": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"],
      "@assets/*": ["attached_assets/*"]
    },

    "types": ["node", "vite/client"]
  }
}
